@model BlogSitesi.Models.Blog
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Default/Index1.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("IcerikYaz", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <h5 style="margin-left: 50px ">BASLIK</h5>
            @Html.TextAreaFor(x => x.Baslik, new { style = "width:300px; height: 30px;  margin-left: 50px" })
        </div>
        <br />
        <br />
        <div>
      
            <h5 style="margin-left: 50px ">YAZI</h5>
            @Html.TextAreaFor(x => x.Yazi, new { style = "width:800px; height: 300px; margin-left: 50px" })
        </div>
        <br />
        <br />
        <div class="form-group" style="margin-left: 36px">
            <div class="col-md-10">
                <input type="file" name="ImageFile" required />
            </div>
        </div>
        <br />
        <div class="form-group"  style="margin-left: 36px">
            <div class="col-md-10">
                <input type="submit" value="KAYDET" class="btn btn-default" />
            </div>
        </div>

    </div>
      
}

</body>
</html>

